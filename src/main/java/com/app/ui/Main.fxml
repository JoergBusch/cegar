<?xml version="1.0" encoding="UTF-8"?>

<!-- Main.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.app.ui.MainController">

	<!-- TableView to display variables -->
	<TableView fx:id="variableTableView">
		<placeholder>
			<Label text="" />
		</placeholder>
		<columns>
			<TableColumn fx:id="nameColumn" text="Name" />
			<!-- Add other columns as needed -->
		</columns>
	</TableView>

	<!-- Fields for editing variable attributes -->
	<GridPane hgap="20" vgap="3">

		<padding>
			<Insets bottom="10" left="10" right="10" top="10" />
		</padding>

		<Label text="Variable" GridPane.columnIndex="0"
			GridPane.rowIndex="0" />
		<TextField fx:id="nameField" promptText="Enter a name."
			GridPane.columnIndex="1" GridPane.rowIndex="0" />

		<Label text="Value" GridPane.columnIndex="0"
			GridPane.rowIndex="1" />
		<TextField fx:id="valueField" promptText="Enter a value."
			GridPane.columnIndex="1" GridPane.rowIndex="1" />

		<Label text="Min" GridPane.columnIndex="0" GridPane.rowIndex="2" />
		<TextField fx:id="minValueField"
			promptText="Enter a minimum value." GridPane.columnIndex="1"
			GridPane.rowIndex="2" />

		<Label text="Max" GridPane.columnIndex="0" GridPane.rowIndex="3" />
		<TextField fx:id="maxValueField"
			promptText="Enter a maximum value." GridPane.columnIndex="1"
			GridPane.rowIndex="3" />

		<Label text="Transition" GridPane.columnIndex="0"
			GridPane.rowIndex="4" />
		<TextArea fx:id="transitionBlockField"
			promptText="Enter a transition block." GridPane.columnIndex="1"
			GridPane.rowIndex="4" />
		<columnConstraints>
			<ColumnConstraints />
			<ColumnConstraints />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints />
			<RowConstraints />
			<RowConstraints />
			<RowConstraints />
			<RowConstraints />
		</rowConstraints>

	</GridPane>
	<FlowPane hgap="3.0" prefHeight="0.0" prefWidth="574.0">
		<children>

			<!-- Buttons for adding and deleting variables -->
			<Button onAction="#handleAddVariable" prefHeight="25.0"
				prefWidth="93.0" text="Add" />
			<Button onAction="#handleDeleteVariable" prefHeight="25.0"
				prefWidth="91.0" text="Delete" />
			<Button onAction="#handleLoadVariables" prefHeight="25.0"
				prefWidth="90.0" text="Load" />
			<Button onAction="#handleSaveVariables" prefHeight="25.0"
				prefWidth="93.0" text="Save" />
			<Button onAction="#handleCreateGraph" prefHeight="25.0"
				prefWidth="184.0" text="Create Graph" />
		</children>
	</FlowPane>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>

</VBox>
